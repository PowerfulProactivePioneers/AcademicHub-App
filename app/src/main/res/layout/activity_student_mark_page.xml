    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/idBarChart"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        tools:ignore="MissingClass"/>



</LinearLayout>